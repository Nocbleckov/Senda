<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:background="@drawable/padding_margin"
    android:padding="10dp"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/misrutas"
        android:id="@+id/imagenMisRutas_AdaptadorMisRutas"
        android:layout_marginBottom="12dp"
        />
    <TextView
        android:text="Identificador de la Rutas"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/scrollHrz_AdaptadorMisRutas"
        android:layout_toRightOf="@+id/imagenMisRutas_AdaptadorMisRutas"
        android:id="@+id/labelIdentificador_AdaptadorMisRutas"
        android:gravity="center|right"
        android:layout_marginBottom="12dp"
        />
    <HorizontalScrollView
        android:id="@+id/scrollHrz_AdaptadorMisRutas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imagenMisRutas_AdaptadorMisRutas"
        android:layout_above="@+id/imagenRegionMapa_AdaptadorMisRutas"
        android:layout_margin="2dp"
        android:scrollbarSize="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:text="Siglas: "
                android:id="@+id/labelSiglas_AdaptadorMisRutas"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/label_margin"
                />
            <TextView
                android:text="Municipio"
                android:id="@+id/labelMunicipio_AdaptadorMisRutas"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/label_margin"
                />
            <TextView
                android:text="Estado:"
                android:id="@+id/labelEstado_AdaptadorMisRutas"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/label_margin"
                />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:src="@mipmap/dwmap"
        android:id="@+id/imagenRegionMapa_AdaptadorMisRutas"
        android:layout_width="400dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
