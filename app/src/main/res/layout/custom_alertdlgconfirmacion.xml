<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    >
<TextView
    android:text="Mensaje"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textSize="16sp"
    android:layout_marginTop="12dp"
    android:id="@+id/labelMensaje_CstAlertDlgConfirmacion"
    android:background="@drawable/label_margin"
    android:layout_margin="12sp"
    />

    <Button

        android:text="Aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/labelMensaje_CstAlertDlgConfirmacion"
        android:layout_alignLeft="@+id/labelMensaje_CstAlertDlgConfirmacion"
        android:layout_marginTop="8dp"
        android:id="@+id/botonAceptar_CstAlertDlgConfirmacion"
        />
    <Button
        android:text="Cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/labelMensaje_CstAlertDlgConfirmacion"
        android:layout_alignRight="@+id/labelMensaje_CstAlertDlgConfirmacion"
        android:layout_marginTop="8dp"
        android:id="@+id/botonCancelar_CstAlertDlgConfirmacion"
        />



</RelativeLayout>
