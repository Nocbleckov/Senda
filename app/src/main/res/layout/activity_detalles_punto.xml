<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="desarrollo.sip.senda.activities.DetallesPuntoActivity"
    android:background="#ffffff"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/carViewPunto_DetallesPunto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="15dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="10dp"
        card_view:cardPreventCornerOverlap="false"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="2DA PRIVADA JOSE REYES MARTINEZ 111, Aguascalientes, Aguascalientes, MÃ©xico"
                android:id="@+id/textDireccionCompleta_DetallesPunto"
                android:gravity="right"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#ffffff"
                android:background="#535353"
                android:padding="5dp"
                android:layout_marginTop="14dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="12dp"
                android:id="@+id/imagenPunto_DetallesPunto"
                android:layout_below="@id/textDireccionCompleta_DetallesPunto"
                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagenPunto_DetallesPunto">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:text="Calle: "
                        android:id="@+id/labelNumeroCalle_DetallesPunto"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:text="Numero,Calle"
                        android:textSize="20sp"
                        android:id="@+id/textNumeroCalle_DetallesPunto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelNumeroCalle_DetallesPunto"
                        android:layout_margin="5dp"
                        />


                    <TextView
                        android:text="Colonia: "
                        android:id="@+id/labelColonia_DetallesPunto"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@id/textNumeroCalle_DetallesPunto"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:text="Colonia"
                        android:textSize="20sp"
                        android:id="@+id/textColonia_DetallesPunto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelColonia_DetallesPunto"
                        android:layout_margin="5dp"
                        />


                    <TextView
                        android:text="Localidad: "
                        android:id="@+id/labelLocalidad_DetallesPunto"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@+id/textColonia_DetallesPunto"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:text="Localidad"
                        android:textSize="20sp"
                        android:id="@+id/textLocalidad_DetallesPunto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelLocalidad_DetallesPunto"
                        android:layout_margin="5dp"
                        />



                    <TextView
                        android:text="Municipio: "
                        android:id="@+id/labelMunicipio_DetallesPunto"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@+id/textLocalidad_DetallesPunto"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:text="Municipio"
                        android:textSize="20sp"
                        android:id="@+id/textMunicipio_DetallesPunto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelMunicipio_DetallesPunto"
                        android:layout_margin="5dp"
                        />



                    <TextView
                        android:text="Estado: "
                        android:id="@+id/lableEstado_DetallesPunto"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@+id/textMunicipio_DetallesPunto"
                        android:textColor="#000000"
                        />

                    <TextView

                        android:text="Estado"
                        android:textSize="20sp"
                        android:id="@+id/textEstado_DetallesPunto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lableEstado_DetallesPunto"
                        android:layout_margin="5dp"

                        />


                    <TextView
                        android:text="Codigo Postal: "
                        android:id="@+id/labelCodigoPostal_DetallesPunto"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@+id/textEstado_DetallesPunto"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:text="CodigoPostal"
                        android:textSize="20sp"
                        android:id="@+id/textCodigoPostal_DetallesPunto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelCodigoPostal_DetallesPunto"
                        android:layout_margin="5dp"
                        />


                    <TextView

                        android:text="Estatus"
                        android:id="@+id/labelEstatus_DetallesPunto"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@+id/textCodigoPostal_DetallesPunto"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:text="Estado"
                        android:textSize="20sp"
                        android:id="@+id/textEstatus_DetallesPunto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelEstatus_DetallesPunto"
                        android:layout_margin="5dp"
                        />

                    <Button
                        android:text="Iniciar Encuesta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textEstatus_DetallesPunto"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        />


                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
