<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sedatu.com.senda.activities.MisRutas"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:text="Usuario: "
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="22sp"
        android:id="@+id/labelUsario_MisRutas"
        android:layout_toLeftOf="@+id/imagenUsuario_MisRutas"
        android:gravity="center|left"
        android:layout_marginBottom="12dp"
        android:paddingLeft="6dp"
        android:translationZ="22dp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/mispuntos"
        android:id="@+id/imagenUsuario_MisRutas"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imagenUsuario_MisRutas"
        android:id="@+id/listaMisRutas_MisRutas"
        android:clickable="true"
        android:divider="#00ffffff"
        android:dividerHeight="0dp"
        android:translationZ="20dp"
        />

</RelativeLayout>