<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="desarrollo.sip.senda.activities.EditarRutasActivity"
    >

    <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mapEditar"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_weight="70"
        tools:context=".MapaActivity"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mapEditar"
        android:id="@+id/listaRuta_EditarRuta"
        android:layout_marginTop="5dp"
        android:background="@drawable/label_margin"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        >
    </ListView>

</RelativeLayout>
